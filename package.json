{
  "name": "commerce-myaccount",
  "version": "0.0.1",
  "main": "src/server.js",
  "description": "Replatform of SEG's MYACC, using a modern JS stack.",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nytm/commerce-myaccount.git"
  },
  "engines": {
    "node": "^4.2.0"
  },
  "scripts": {
    "babel-build": "rm -rf build && babel --out-dir build src",
    "babel-watch": "rm -rf build && (babel --watch --out-dir build src &) && sleep 2",
    "lint": "eslint . --ext .js,.jsx; exit 0",
    "watch-lint": "nodemon --watch src -e .jsx -x 'npm run lint'",
    "test": "mocha test --recursive; exit 0",
    "watch-test": "nodemon -w test -w src -e .jsx -x 'npm run test'",
    "bundle-client": "webpack --config webpack.client.js --release",
    "bundle-server": "webpack --config webpack.server.js --release",
    "bundle": "rm -rf dist && mkdir dist && cp -rf public dist/public && npm run bundle-client && npm run bundle-server",
    "start": "node dist/server.js",
    "watch-client": "webpack-dev-server --config webpack.client.js --content-base \"http://localhost:8080\"  --inline --hot --host localhost --port 8888",
    "watch-server": "nodemon -w 'src/server.js' -w 'src/views' -w 'webpack.babel.js' -x 'webpack --config webpack.server.js && node dist/server.js'",
    "dev": "concurrent --kill-others \"npm run watch-server\" \"npm run watch-client\""
  },
  "dependencies": {
    "alt": "^0.17.4",
    "babel": "^5.8.21",
    "body-parser": "^1.13.3",
    "bootstrap": "git+ssh://git@github.com/twbs/bootstrap.git#v4-dev",
    "classnames": "^2.1.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "history": "^1.12.5",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-router": "^1.0.0-rc3",
    "superagent": "^1.3.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.0.0",
    "autoprefixer-loader": "^3.1.0",
    "babel-core": "^5.8.21",
    "babel-eslint": "^4.0.5",
    "babel-loader": "^5.3.2",
    "babel-runtime": "^5.8.20",
    "concurrently": "^0.1.1",
    "css-loader": "^0.19.0",
    "eslint": "^1.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-react": "^3.2.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "handlebars": "^4.0.3",
    "handlebars-loader": "^1.1.0",
    "jsdom": "6.5.1",
    "jsx-loader": "^0.13.2",
    "mocha": "^2.2.5",
    "mocha-loader": "^0.7.1",
    "mockery": "^1.4.0",
    "node-sass": "^3.3.3",
    "nodemon": "^1.7.2",
    "path": "^0.12.7",
    "react-addons-test-utils": "^0.14.0",
    "react-hot-loader": "^1.2.8",
    "sass-loader": "^3.0.0",
    "source-map-support": "^0.3.2",
    "style-loader": "^0.12.4",
    "webpack": "^1.11.0",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-dev-server": "^1.10.1",
    "webpack-error-notification": "^0.1.4"
  },
  "babel": {
    "env": {
      "production": {
        "optional": [
          "optimisation",
          "minification"
        ]
      },
      "development": {
        "loose": "all"
      }
    }
  }
}
